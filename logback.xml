<configuration>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/kingfisher-config/kingfisher-config.log</file>
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} %5p -- [%15.15t]:[%.30X{akkaSource}]:[%c{35}] - %L : %m%n
            </pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>/var/log/kingfisher-config/archive/%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <maxFileSize>64MB</maxFileSize>
            <maxHistory>300</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} %5p -- [%15.15t]:[%.30X{akkaSource}]:[%c{35}] - %L : %m%n
            </pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <logger name="com.maxtropy.roc" level="TRACE"/>
    <logger name="com.maxtropy.kingfisher" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
